<h3 class="card-title">PhiX Spiked Buffer</h3>
<p class="lead">An aliquot of PhiX stock which will be used directly in sequencing</p>
<%= form_for spiked_buffer do |form| %>
  <div class='phi-x-form'>
    <%= form.label :name %>
    <div class="field">
      <%= form.text_field :name, required: true %>
      <div class="form-help">
        Provide a shared root name for the generated tubes.
        ie. The name 'Example' will result in 'Example #1', 'Example #2'
      </div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.label :parent_barcode %>
    <div class="field">
      <%= form.text_field :parent_barcode, required: true %>
      <div class="form-help">
        Scan in a PhiX stock from which to create the spiked buffer tubes
      </div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.label :study_id, 'Study' %>
    <div class="field">
      <%= form.select :study_id, @study_names , {prompt: "Same a stock"} %>
      <div class="form-help">
        The study with which the PhiX will be associated.
        Leave as is to use same study as parent
      </div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.label :concentration %>
    <div class="field">
    <div class="input-group">
      <%= form.number_field :concentration, min: 0, step: 0.001 %>
      <div class="input-group-append">
        <span class="input-group-text" id="basic-addon2">nM</span>
      </div>
    </div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.label :volume %>
    <div class="field">
    <div class="input-group">
      <%= form.number_field :volume, min: 0, step: 0.001 %>
      <div class="input-group-append">
        <span class="input-group-text" id="basic-addon2">&micro;l</span>
      </div>
    </div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.label :number %>
    <div class="field">
      <%= form.number_field :number, min: 1, step: 1, required: true %>
      <div class="form-help">The number of stocks which will be generated.</div>
    </div>
  </div>
  <div class='phi-x-form'>
    <%= form.submit class: 'btn btn-success btn-block' %>
  </div>
<% end %>
