<h2>Bulk submission successfully made</h2>

<h2>Your submissions:</h2>
  <div class='quota_title'>
    <strong>Submissions</strong>
  </div>
  <div class="quota">
    <table width='100%' cellpadding='3' cellspacing='0' class='sortable'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Details</th>
        </tr>
      </thead>
      <% @these_subs.each do |submission| %>
        <tr>
          <td><%= link_to submission.id, submission_path(submission.id) %></td>
          <td><%= submission.name %>
          <td><%= @sub_details[submission.id] %></td>
        </tr>
      <% end %>
      </table>
  </div>
