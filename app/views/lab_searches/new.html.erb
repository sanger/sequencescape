<% add :title, "You can search for batches, users, libraries and requests here." -%>

<div>
  <h1>Search</h1>
  <div class="info">
    <%= form_tag('/lab_searches/new', method: :get, class: 'form-inline') do -%>
      <div>Search for: <%= text_field_tag "q", nil, class: 'form-control' -%> <%= submit_tag "Go", class: 'form-control' -%></div>
    <% end -%>
  </div>
  <% unless params["q"].blank? -%>
    <div id="results">
      <%= render partial: "search" %>
    </div>
  <% end -%>
</div>
