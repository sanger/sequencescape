
<% add :about, "Print labels" -%>
<% add :back_menu, "Back to batch" => batch_path(@batch) -%>

<%= page_title 'Print Labels', "Batch #{@batch.id}" %>

<div class="content">
  <div class="info">
    <form action='/batches/print_multiplex_barcodes' method='POST'>
    <%= render partial: "shared/print" %>
        <table width="100%" cellspacing="0" cellpadding="0">
        <tr>
          <td width="35%" class="item">Number of copies:</td>
          <td width="65%"><input name="count" size="10" /></td>
        </tr>
        <tr>
          <td width="35%" class="item">Label for completed multiplexed library:</td>
        </tr>
        <tr>
          <td width="35%" class="item"><%= h(@asset.display_name) %></td>
          <td width="65%"><input type='checkbox' checked='on' name='printable[<%= @asset.id %>]'></td>
          <td></td>
        </tr>
        <tr>
          <td width="35%" class="item">&nbsp;</td>
          <td width="65%"><input type='submit' value='Print labels' class="print-button"> or <%= link_to 'cancel', controller: 'batches', action: 'show', id: @batch.id %></td>
        </tr>
      </table>
    <input type='hidden' name='batch_id' value='<%= @batch.id %>' />
  </div>
</div>
