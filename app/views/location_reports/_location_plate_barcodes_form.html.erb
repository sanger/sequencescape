<%= form_for(location_report, html: {class: 'submit_once', id: "new_report_from_barcodes"}) do |f| %>
  <div class="form-group">
    <%= f.label "barcodes_text", 'List of Barcodes (new line for each)' %><br/>
    <%= f.text_area :barcodes_text, {prompt: 'Enter barcodes...', size: '50x10'} %>
  </div>

  <%= f.hidden_field :report_type, value: 'type_barcodes' %>
  
  <div class="form-group actions-group">
    <%= f.submit('Create report from barcodes', autocomplete: 'off',class: 'disable_on_submit btn btn-success') %>
  </div>
<% end %>