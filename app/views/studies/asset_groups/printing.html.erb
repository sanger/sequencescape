<%- add :menu, "Back to Study" => study_path(@study)  %>

<div class="page-header"><h1>Asset groups for <%= @study.name %></h1></div>
<div class='info'>
  <p>Please select a group below to print labels for.  Please note that these labels will be for the sample tubes.</p>
</div>
<div class='info'>
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Number of assets in group</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
    <% @asset_groups.each do |asset_group| -%>
      <tr>
        <td><%= asset_group.name %> </td>
        <td align="center"><%= asset_group.assets.size %></td>
        <td> <%= link_to 'Print labels', print_study_asset_group_path(@study, asset_group) %>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>
