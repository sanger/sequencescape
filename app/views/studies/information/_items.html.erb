<div class="card">
  <div class="card-header">
  <ul class="nav nav-tabs card-header-tabs" role="tablist">
    <% @summaries.each_with_index do |description, index| %>
      <% selected = summary.to_i == index ? 'active' : '' %>
      <%= content_tag(:li, class: selected) do %>
        <%= link_to description, show_summary_study_information_path(@study, {summary: index}.merge(@extra_params.to_h)), class: (summary.to_i == index ? 'selected nav-link' : 'nav-link'), remote: true, :'data-throbber' => '.loading-bar-container', :'data-failure' => '#remote_error', :'data-update' => '#everything', :'data-tab-group' => 'studies-summaries-tab' %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div>
    <%= loading_bar %>
    <%= remote_error %>
    <div id="everything"></div>
  </div>
</div>
