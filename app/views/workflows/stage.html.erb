<%= render 'sidebar' %>

<%= page_title "Batch #{@batch.id}", @task.name, badges: @batch.failed? ? ['failed'] : [] %>

<% if @task.partial.present? %>
  <%= render partial: @task.partial, locals: { requests: @batch.requests } %>
<% else %>
  <%= alert(:danger) do %>
    Task not correctly configured. Please contact support.
    <%= link_to 'Help', new_user_query_path, class: 'help-button btn-danger' %>
  <% end %>
<% end %>
