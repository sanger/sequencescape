 <div class="info">
  <% if requests.empty? -%>
  <div id="empty_filter">
    No requests found. <%= link_to "Create the first one", action: "new" %>
  </div>
  <% else -%>
  <table width="100%" cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <th class="nosort" width="7%"><input type='checkbox' class='select_all'></th>
        <th width="5%"><%= link_to 'Order', "javascript:void(0);" %></th>
        <th width="7%"><%= link_to 'Sample', "javascript:void(0);" %></th>
        <th width="7%"><%= link_to 'Library', "javascript:void(0);" %></th>
        <th width="15%"><%= link_to 'Library Name', "javascript:void(0);" %></th>
        <% if @batch.multiplexed? %>
          <th width="7%"><%= link_to 'Sample name', "javascript:void(0);" %></th>
          <th width="15%"><%= link_to 'Tag #', "javascript:void(0);" %></th>
        <% end %>
        <% @rits.each do |rit| %>
          <th width="7%"><%= link_to rit.label, "javascript:void(0);" %></th>
        <% end %>
        <!-- <th class='label' width="7%"><%= link_to 'QC', "javascript:void(0);" %></th> -->
        <th width="10%">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
  <% requests.each do |request| -%>
    <% passed = request.has_passed(@task) -%>
        <% if passed && !@task.per_item -%>
        <tr class="<%= cycle("rowodd", "roweven") %>">
          <td class="7%">&nbsp;</td>
          <td width="5%"><%= request.position %></td>
          <td width="7%"><%= request.sample_name %></td>
          <td width="7%"><%= request.asset.barcode %></td>
          <td width="15%"><%= link_to(h(request.asset.display_name), asset_url(request.asset), target: "_blank") %></td>

          <% @rits.each do |rit| -%>
            <td width="10%"><%= display_request_information(request, rit) %></td>
          <% end -%>

          <td width="5%"><%= display_boolean_results(request.asset.qc_state) %></td>
          <td class="10%">PASSED</td>
        </tr>
        <% else -%>
        <tr class="<%= cycle("rowodd", "roweven") %>">
          <td class="7%"><input name='request[<%= request.id %>]' class='sample_check select_all_target' type='checkbox' checked></td>
          <td width="5%"><%= request.position %></td>
          <% if request.asset && request.asset.parent %>
            <td width="7%"><%= link_to request.asset.parent.name, asset_url(request.asset.parent), target: "_blank" %></td>
          <% else %>
            <td width='7%'></td>
          <% end %>
          <td width="7%"><%= request.asset.barcode  %></td>
          <td width="15%"><%= link_to(h(request.asset.display_name), asset_url(request.asset), target: "_blank") %></td>

          <% @rits.each do |rit| -%>
            <td width="10%"><%= display_request_information(request, rit) %></td>
          <% end -%>
          <td class="10%"><% if request.failed? -%>FAILED<% else -%>&nbsp;<% end -%></td>
        </tr>
        <% end -%>
  <% end -%>
    </tbody>
  </table>
  <% end -%>
<br />
</div>
