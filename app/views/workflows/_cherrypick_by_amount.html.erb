<%# locals: (form) -%> <%# <-- this is Rails 7.1 magic %>

<div id='pick_by_nano_grams'>

  <div class="form-group form-row">
    <%= label_tag('cherrypick[strategy]_nano_grams' , 'Pick by amount (ng)', class: 'col-12 col-lg-8 col-form-label') %>
    <div class="col-12 col-lg-4">
      <%= radio_button( 'cherrypick', 'strategy', 'nano_grams', { class: 'form-control text-right' }) %>
    </div>
  </div>

  <%= fields_for :nano_grams do |nano_grams_fields| %>

    <div class="form-group form-row">
      <%= nano_grams_fields.label('total_nano_grams', 'Quantity to pick (ng)', class: 'col-12 col-lg-8 col-form-label') %>
      <div class="col-12 col-lg-4">
        <%= nano_grams_fields.text_field('total_nano_grams', value: '1000', class: 'form-control text-right') %>
      </div>
    </div>

    <div class="form-group form-row">
      <%= nano_grams_fields.label('minimum_volume', 'Minimum Volume (µl)', class: 'col-12 col-lg-8 col-form-label') %>
      <div class="col-12 col-lg-4">
        <%= nano_grams_fields.text_field('minimum_volume', value: '10', class: 'form-control text-right') %>
      </div>
    </div>

    <div class="form-group form-row">
      <%= nano_grams_fields.label('maximum_volume', 'Maximum Volume (µl)', class: 'col-12 col-lg-8 col-form-label') %>
      <div class="col-12 col-lg-4">
        <%= nano_grams_fields.text_field('maximum_volume', value: '50', class: 'form-control text-right') %>
      </div>
    </div>

    <div class="form-group form-row">
      <%= nano_grams_fields.label('robot_minimum_picking_volume', 'Robot Minimum Picking Volume (µl)', class: 'col-12 col-lg-8 col-form-label') %>
      <div class="col-12 col-lg-4">
        <%= nano_grams_fields.text_field('robot_minimum_picking_volume', value: 5.0, class: 'form-control text-right', options: { type: 'number', step: 0.1, min: 1, max: 9 }) %>
      </div>
    </div>

  <% end %>

</div>
