<table width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <%= tabulated_error_messages_for "sample" %>
  </tr>
          <% if creation %>
  <tr>
    <td width="40%" class="item"><label for="sample_name">Sample name:</label> <%= required_marker -%></td>
    <td width="65%"><%= form.text_field :name %></td>
  </tr>
      <% end %>
  <tr>
  <td width="100%" colspan=2>
    <%= render(partial: 'shared/metadata/edit/sample', locals: { sample: @sample }) %>
  </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>
      <%= form.submit %> or <%= link_to "cancel", (@sample.new_record? ? samples_path : sample_path(@sample)) %>
    </td>
  </tr>
</table>
