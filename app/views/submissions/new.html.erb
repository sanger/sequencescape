
<%- add :about, "Starting a new Submission" -%>
<% if can? :create, Submission %>
  <%- add :menu, "Submissions Inbox" => submissions_path -%>
<% end %>


<%= page_title 'Submission', 'New' %>

<%= render partial: 'orders' %>

<%= legacy_javascript_tag do %>

  (function(window, $, undefined){
    "use strict";

    // Check for thewindow.SCAPE object.  This is the only place in the global
    // namespace we should be storing things.
    if (window.SCAPE == undefined) window.SCAPE = {};

    <% if @presenter.study_id.present? -%>
     window.SCAPE.submission.study_id = <%= @presenter.study_id %>;
    <% end -%>
  })(window, jQuery);

<% end %>
