<%
  def shorten_help(s)
    (s =~ /^(.{20}\S*)\s\S/) and $1
  end
%>
<% if field.help %>
  <% short = shorten_help(field.help) %>
  <% if short %>
    <%= short %> <% tooltip "..." do %>
      <%= field.help %>
    <% end %>
  <% else %>
    <%= field.help %>
  <% end %>
<% end %>
