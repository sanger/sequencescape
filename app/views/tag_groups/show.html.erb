
<% add :menu, "All Tag Groups" => tag_groups_path(@asset) %>

<%= page_title('Tag Group', @tag_group.name) %>

<dl>
  <dt>Name</dt><dd><%= @tag_group.name %></dd>
  <dt>Adapter Type</dt><dd><%= @tag_group.adapter_type_name %></dd>
</dl>

<%= render partial: "shared/tags_list", locals: { tag_group: @tag_group, tags: @tag_group.tags } %>

<br>
<% if can? :create, TagLayoutTemplate %>
  <%= link_to 'Create a new tag layout template from this tag group', new_tag_layout_template_path(tag_group_id: @tag_group.id) %>
<br>
<% end %>
<%= link_to 'Back to tag groups list', tag_groups_path %>
