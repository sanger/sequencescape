<div class="page-header"><h1>New Tag Group</h1></div>

<%= form_for(@tag_group) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <table>
    <thead>
      <th>Index</th>
      <th>Expected Sequence</th>
    </thead>
    <% @number_of_tags ||= "12" %>
  <% @number_of_tags.to_i.times do |i| -%>
    <tr>
      <%= hidden_field_tag "tags[#{i}][map_id]", "#{i+1}" %>
      <td><%= label_tag "tags_#{i}_oligo", "Index #{i+1}" %></td>
      <td><%= text_field_tag "tags[#{i}][oligo]" %></td>
    </tr>
  <% end -%>
  </table>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tag_groups_path %>
