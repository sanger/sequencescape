
<h3>Print labels for <%= asset.label %> "<%= asset.name %>"</h3>
<p>Choose your label printer</p>
<%= form_tag print_assets_receptacle_path(asset), method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <label for="printable[<%= asset.id %>]" class="col-sm-2"><%= asset.label %></label>
    <div class="col-sm-10">
      <input type="hidden" name="printable[<%= asset.id %>]" />
      <span><%= h(asset.display_name) %></span>
    </div>
  </div>
  <div class="form-group">
    <label for="barcode_printer_list" class="col-sm-2">Print to</label>
    <div class="col-sm-10">
      <%= render partial: "shared/printer_list" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <input type="hidden" name="printable[<%= asset.id %>]" />
    </div>
    <div class="com-sm-10">
      <input type="submit" value="Print labels" class="btn btn-success"/> or <%= link_to "cancel", receptacle_path(asset) %>
    </div>
  </div>
<% end %>

