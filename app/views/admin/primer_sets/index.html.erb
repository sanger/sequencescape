<%= page_title 'Primer Sets', 'Index' %>
<table id="primer_set_list" class="sortable table table-striped">
  <thead>
    <tr>
      <th><a>Name</a></th>
      <th><a>SNP Count</a></th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
  <% @primer_sets.each do |primer_set| %>
    <tr>
      <td><%= primer_set.name %></td>
      <td><%= primer_set.snp_count %></td>
      <td><%= link_to 'Edit', edit_admin_primer_set_path(primer_set), title: "Edit #{primer_set.name}" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Primer Set', new_admin_primer_set_path, class: 'btn btn-default' %>
