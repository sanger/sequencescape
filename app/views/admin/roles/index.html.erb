<%- add :about, "User Management" %>
<%- add :admin_option, "Add new role" => new_admin_role_path %>
<%- add :admin_option, "Back to Admin Panel" => admin_path %>

<h1>Listing Roles</h1>

<ul>
  <% @roles.each do |role| -%>
    <li>
      <h3><%= role.humanize %></h3>
      <p><strong><%= link_to "Show all users that are #{role}s", admin_role_users_path(role) %></strong></p>
    </li>
  <% end %>
</ul>
