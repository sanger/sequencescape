
<div class="page-header"><h1>New role</h1></div>
<%= form_for(@role, url: admin_roles_path) do |f| %>
  <%= error_messages_for(f.object) %>
  <p>
     <label for='role_form'>Role Name:</label> <%= f.text_field :name %>
   </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_roles_path %>
