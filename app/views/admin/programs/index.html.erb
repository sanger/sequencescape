<%= page_title 'Programs', 'List' %>
<table id="program_list" width="100%" class="sortable" cellpadding="3" cellspacing="0">
  <thead>
    <tr>
      <th><%= link_to "Name", "javascript:void(0);" %></th>
      <th><%= link_to "Number of Studies", "javascript:void(0);" %></th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% for program in @programs %>
    <tr>
      <td><%= link_to program.name, admin_program_path(program), title: "View #{program.name}" %></td>
      <td><%= program.studies.count %></td>
      <td><%= link_to 'Edit', edit_admin_program_path(program), title: "Edit #{program.name}" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Program', new_admin_program_path %>
