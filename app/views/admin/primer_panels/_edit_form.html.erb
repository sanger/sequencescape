<p>
  <%= f.label :name %><br />
  <%= f.text_field :name, required: true, class: 'form-control' %>
</p>
<p>
  <%= f.label :snp_count %><br />
  <%= f.number_field :snp_count, required: true, min: 1, step: 1, class: 'form-control' %>
</p>

<%= f.fields_for :programs do |program| %>
  <% f.object.programs.each do |key, value| %>
    <p>
    <%= f.label key %><br />
    <%= program.fields_for key do |pcr| %>
      <%= f.label :name %><br />
      <%= pcr.text_field :name, value: f.object.programs[key]['name'], class: 'form-control' %>
      <%= f.label :duration %><br />
      <%= pcr.text_field :duration, value: f.object.programs[key]['duration'], class: 'form-control' %>
      </p>
    <% end %>
  <% end %>

<% end %>


