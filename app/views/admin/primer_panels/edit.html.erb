<%= page_title 'Primer Panel', 'Edit' %>

<%= alert :danger do %>
  <strong>Warning</strong>
  <p>Editing a primer panel will affect <em>all</em> experiments where a primer panel has been used.</p>
<% end %>

<%= form_for([:admin, @primer_panel]) do |f| %>
  <%= f.error_messages %>

  <%= render partial: "edit_form", locals: {f: f } %>
  <p>
    <%= f.submit "Update", class: 'btn btn-warning' %>
  </p>
<% end %>

<%= link_to 'Back', admin_primer_panels_path %>
