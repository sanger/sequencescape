
<%= page_title 'Bait Libraries', 'Index' %>
<table id="bait_library_list" class="sortable table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Supplier Identifier</th>
      <th>Supplier</th>
      <th>Target Species</th>
      <th>Bait Library Type</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% for bait_library in @bait_libraries %>
    <tr>
      <td><%= bait_library.name %></td>
      <td><%= bait_library.supplier_identifier %></td>
      <td><%= bait_library.bait_library_supplier.name %></td>
      <td><%= bait_library.target_species %></td>
      <td><%= bait_library.bait_library_type.name %></td>
      <td><%= link_to 'Edit', edit_admin_bait_library_path(bait_library), title: "Edit #{bait_library.name}" %></td>
      <td><%= link_to 'Delete', admin_bait_library_path(bait_library), title: "Delete #{bait_library.name}", confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Bait Library', new_admin_bait_library_path %>
<br />
<%= render partial: "supplier_index" %>
<br />
<%= render partial: "type_index" %>
