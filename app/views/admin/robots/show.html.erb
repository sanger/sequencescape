<p>
  <b>Name:</b>
  <%=h @robot.name %>
</p>

<p>
  <b>Location:</b>
  <%=h @robot.location %>
</p>


<h2>Properties</h2>
<table>
  <thead>
    <th>Name</th>
    <th>Key</th>
    <th>Value</th>
</thead>
<% @robot.robot_properties.each do |property| %>
<tr>
  <td><%= property.name %></td>
  <td><%= property.key %></td>
  <td><%= property.value %></td>
</tr>
<% end %>
</table>


