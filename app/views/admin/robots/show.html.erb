<p>
  <b>Name:</b>
  <%=h @robot.name %>
</p>

<p>
  <b>Location:</b>
  <%=h @robot.location %>
</p>

<p>
  <b>Barcode:</b>
  <%=h @robot.barcode %>
</p>



<h2>Properties</h2>
<table>
  <thead>
    <th>Name</th>
    <th>Key</th>
    <th>Value</th>
</thead>
<% @robot.robot_properties.each do |property| %>
<tr>
  <td><%= property.name %></td>
  <td><%= property.key %></td>
  <td><%= property.value %></td>
</tr>
<% end %>
</table>

<%= form_tag(print_labels_admin_robot_path(@robot), :method => :get) do %>
  <%= render :partial => "shared/printer_list" %>
  <button type="submit" class="btn btn-default">Print</button>
<% end %>


<%= link_to 'Edit', edit_admin_robot_path(@robot) %> |
<%= link_to 'Back', admin_robots_path %> |
<%= link_to 'Manage Properties', admin_robot_robot_properties_path(@robot) %> |
<%= link_to 'All robots', admin_robots_path %>
