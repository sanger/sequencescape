<% add :about, "You can search for studies, samples and assets here." -%>

<div class="page-header"><h1>Search for <%= @query %></h1></div>

<%= form_tag searches_path(q: params["q"]), method: :get do -%>
  <div>
    <span class="item">
      <label for="q">Search for:</label> <%= select_tag :type, options_for_select(search_options, params[:type]||""), id: 'layout_search_options' %> <%= text_field_tag "q" %>
      <%= submit_tag "Go" %>
    </span>
  </div>
<% end %>

<% unless params["q"].blank? -%>
  <div id="results">
    <%= render partial: "search" %>
  </div>
<% end -%>

<p><strong>Search Took</strong> <%= @search_took %> s</p>
<p><strong>Render Took</strong> <%= Time.now - @render_start %> s</p>
