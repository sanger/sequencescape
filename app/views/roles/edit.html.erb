<h1>Editing "<%= @role.name.humanize %>" role</h1>

<%= form_for(@role, :url=>admin_role_path(@role)) do |f| %>
  <%= f.error_messages %>
  <p>
    <label for='role_form'>Role Name:</label> <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %> or <%= link_to 'cancel', "javascript:history.back();" %>
  </p>
<% end %>
